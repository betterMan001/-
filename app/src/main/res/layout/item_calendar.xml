<?xml version="1.0" encoding="utf-8"?>
<com.ly.a316.ly_meetingroommanagement.customView.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/item_mettingstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12：53"
                android:textColor="#4bc2c5"
                />
            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#4bc2c5"
                ></View>
            <TextView
                android:id="@+id/item_mettingend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13：53"
                android:textColor="#4bc2c5"
                />
        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_calendar_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="#000"
        android:text="[会议]" />

  <TextView
      android:id="@+id/item_mettinghead"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="标题"
      android:textColor="#000"
      android:layout_toRightOf="@+id/item_calendar_day"
      />
    <ImageView
        android:id="@+id/ii"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/pp"
        android:layout_below="@+id/item_calendar_day"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/item_mettinghead"
        android:layout_toRightOf="@+id/ii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参会文员"
        android:id="@+id/item_mettingpeople"
        />
    <ImageView
        android:id="@+id/didian"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:background="@drawable/didiand"
        android:layout_below="@+id/ii"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/item_mettingpeople"
        android:layout_toRightOf="@+id/didian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参会地点"
        android:id="@+id/item_mettingwhere"
        />
    <ImageView
        android:id="@+id/biji"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:background="@drawable/biji"
        android:layout_below="@+id/didian"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/didian"
        android:layout_toRightOf="@+id/biji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:id="@+id/item_mettingplan"
        android:layout_marginBottom="@dimen/dp_10"
        />
</RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:layout_gravity="center"
            android:id="@+id/item_calendar_alerm"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tixing"
            android:text="提醒"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</com.ly.a316.ly_meetingroommanagement.customView.SwipeItemLayout>
