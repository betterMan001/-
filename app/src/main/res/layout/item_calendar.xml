<?xml version="1.0" encoding="utf-8"?>
<com.ly.a316.ly_meetingroommanagement.customView.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mettingstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12：53"
                android:textColor="#4bc2c5" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#4bc2c5"></View>

            <TextView
                android:id="@+id/item_mettingend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13：53"
                android:textColor="#4bc2c5" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_calendar_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:id="@+id/item_mettinghead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/item_calendar_day"
                android:text="标题"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/ii"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/item_calendar_day"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pp" />

            <TextView
                android:id="@+id/item_mettingpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_mettinghead"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/ii"
                android:gravity="center"
                android:text="参会文员" />

            <ImageView
                android:id="@+id/didian"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/ii"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/didiand" />

            <TextView
                android:id="@+id/item_mettingwhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_mettingpeople"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/didian"
                android:gravity="center"
                android:text="参会地点" />

            <ImageView
                android:id="@+id/biji"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/didian"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biji" />

            <TextView
                android:id="@+id/item_mettingplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/didian"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/biji"
                android:gravity="center"
                android:text="备注" />

            <TextView
                android:id="@+id/item_alerttime"
                android:layout_width="wrap_content"
                android:layout_height="0.1sp"
                android:text="dsafasfadffaf" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"

        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <Button
            android:id="@+id/item_calendar_alerm"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tixing"
            android:gravity="center"
            android:text="提醒"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_delete"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/finish"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/four"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</com.ly.a316.ly_meetingroommanagement.customView.SwipeItemLayout>
