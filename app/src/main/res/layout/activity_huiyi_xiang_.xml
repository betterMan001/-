<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".chooseOffice.activity.HuiyiXiang_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="@dimen/text_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hui_image"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hui_where"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="会议室地点" />

                <TextView
                    android:id="@+id/hui_rongliang"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:gravity="bottom"
                    android:text="容量：" />

                <TextView
                    android:id="@+id/huiyi_type"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="会议室类型：" />
            </LinearLayout>
            <ImageView
                android:id="@+id/hui_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chacha"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议已占用的时间："
                android:textSize="10sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/hui_txt_shijian"
                ></TextView>
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/text_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拥有设备"
            android:textColor="#000" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hui_recycleview_she"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="35dp"></android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/text_size_15"
            android:background="@color/gray_text_light"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/text_size_15"
            android:text="地址"
            android:textColor="#000" />
        <CheckBox
            android:id="@+id/hui_dizhi"
                   android:layout_width="@dimen/dp_60"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/text_size_35"
                   android:layout_marginTop="@dimen/text_size_10"
                   android:background="@drawable/select_selector"
                   android:button="@null"
                   android:gravity="center"
                   android:paddingBottom="4dp"
                   android:paddingTop="4dp"
                   android:tag="chb1"
                   android:text="2A"
                   android:textColor="@drawable/txt_select_selector"
                   android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/text_size_15"
            android:background="@color/gray_text_light"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/text_size_15"
            android:text="会议室详情："
            android:textColor="#000" />

        <TextView
            android:id="@+id/hui_xiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/text_size_15"
            android:text="      会议设施方面先进的多媒体设施，所有会议室设有独立的灯光及影音系统。大宴会厅设置舞台和专用多媒体控制室。先进的视像会议设施及高速网络接入服务。" />

        <Button
            android:id="@+id/hui_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/text_size_15"
            android:background="@color/colorRed"
            android:text="确定"
            android:textColor="#FFF"
            android:textSize="@dimen/text_size_15"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <!--<CheckBox
            android:id="@+id/item_shebei_check"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/select_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:tag="chb1"
            android:text="2A"
            android:textColor="@drawable/txt_select_selector"
            android:textSize="13sp" />-->
    </LinearLayout>
</LinearLayout>