<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_pop_lymain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"

        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_img_hui"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_10"
            app:placeholderImage="@drawable/chacha"
            app:roundAsCircle="true"
            app:roundedCornerRadius="@dimen/dp_40"
            />

        <TextView
            android:id="@+id/item_tet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/item_img_hui"
            android:gravity="center"
            android:text="开会"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_tet_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tet_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_img_hui"
            android:text="2A316"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tet_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_tet_where"
            android:gravity="center"
            android:text="18：26"
            android:textSize="10sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/s"
        ></View>
</LinearLayout>