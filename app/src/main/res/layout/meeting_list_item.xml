<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/meeting_list_item"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:id="@+id/meeting_list_time_tv1"
            android:text="2019年1月12号 周五 9:50"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:id="@+id/meeting_list_time_tv2"
            android:text="持续时间：1小时"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/meeting_room_picture"
                android:src="@drawable/meeting_room_default"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meeting_room_picture"
                android:text="会议室：2a316"
                />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <!--会议标题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/meeting_title_tv"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="会议标题"
                        >
                    </TextView>
                </LinearLayout>
                <!--描述会议属性-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/persons001"
                            >
                        </ImageView>
                        <TextView
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:id="@+id/meeting_list_message_tv"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:text="马超"
                            >
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/gou1"
                            >
                        </ImageView>
                        <TextView
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:id="@+id/meeting_list_partner"
                            android:layout_height="match_parent"
                            android:text="1/4人确认参加"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <!--会议类型-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                   >

                    <TextView
                        android:id="@+id/meeting_list_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5dp"
                        android:background="#04aaf1"
                        android:text="会议类型"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>