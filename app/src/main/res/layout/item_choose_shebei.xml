<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    <LinearLayout
        android:id="@+id/item_choose_shebei_xia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备需求"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="@dimen/text_size_25"
            android:layout_height="@dimen/text_size_20"
            android:background="@drawable/xiabian" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_choose_she"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/select_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:tag="chb1"
            android:text="空调"
            android:textColor="@drawable/txt_select_selector"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/select_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:tag="chb1"
            android:text="投影仪"
            android:textColor="@drawable/txt_select_selector"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"

            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/select_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:tag="chb1"
            android:text="影响"
            android:textColor="@drawable/txt_select_selector"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/select_selector"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:tag="chb1"
            android:text="饮水机"
            android:textColor="@drawable/txt_select_selector"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>