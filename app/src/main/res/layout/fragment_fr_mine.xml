<?xml version="1.0" encoding="utf-8"?>
<com.ly.a316.ly_meetingroommanagement.customView.PersonalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_personinfo_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_background" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mine_head"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user_default_head"
                android:layout_centerInParent="true"
                app:riv_oval="true"
                />


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="85dp"
                android:layout_height="38dp"
                android:layout_below="@+id/mine_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="CEO"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </RelativeLayout>

        <!--垂直布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--个人相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f0f0f0"
                android:paddingLeft="45dp"
                android:text=""
                android:textColor="#406dff"
                android:textSize="15sp" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                >
                <!--  修改密码-->
                <LinearLayout
                    android:id="@+id/my_modifypwd_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="修改密码"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_modifypwd_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="45dp"
                        android:gravity="right|center_vertical"
                        android:text=">"
                        android:textColor="#007DFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <!--  修改头像-->
                <LinearLayout
                    android:id="@+id/my_modifyhead_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="修改头像"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/my_modifyhead_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="45dp"
                        android:gravity="right|center_vertical"
                        android:text=">"
                        android:textColor="#007DFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--学生相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F7F7F7"
                android:paddingLeft="45dp"
                android:text=""
                android:textColor="#406dff"
                android:textSize="15sp" />
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            <!--消息中心-->
            <LinearLayout
                android:id="@+id/my_message_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="消息中心"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--系统相关-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F7F7F7"
                android:paddingLeft="45dp"
                android:text="系统相关"
                android:textColor="#406dff"
                android:textSize="15sp" />
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            <!--  清理缓存-->
            <LinearLayout
                android:id="@+id/my_clean"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="清理缓存"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            <!--退出登录-->
            <LinearLayout
                android:id="@+id/my_exit_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_rectangle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="退出登陆"
                    android:textColor="#406dff"
                    android:textSize="16sp" />
            </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
    </com.ly.a316.ly_meetingroommanagement.customView.PersonalScrollView>

