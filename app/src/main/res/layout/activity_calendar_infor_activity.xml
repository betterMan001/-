<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activites.AlarmActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ca_infor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/title_bar_color"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/backtwo"
        app:titleTextColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="日程详情"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/add_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="right"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#d9d9f3"></View>

    <TextView
        android:id="@+id/ca_infor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="标题"
        android:padding="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#d9d9f3"></View>

    <TextView
        android:id="@+id/ca_infor_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="地点"
        android:padding="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5Cbfbfbf"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="全天"
            android:textColor="#000"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/ca_infor_allday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginRight="@dimen/dp_10"
            android:text="全天"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#d9d9f3"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="开始时间"
            android:textColor="#000"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/ca_infor_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:padding="@dimen/dp_10"
            android:text="2018-20-13" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#d9d9f3"></View>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="结束时间"
            android:textColor="#000"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/ca_infor_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:padding="@dimen/dp_10"
            android:text="2018.20.3" />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ca_infor_layout_chongfu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="重复"
            android:textColor="#000" />

        <TextView
            android:id="@+id/ca_infor_chongfu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="永不" />

        <ImageView
            android:layout_width="@dimen/text_size_20"
            android:layout_height="@dimen/text_size_20"
            android:layout_gravity="center"
            android:background="@drawable/youbian" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5Cbfbfbf"></View>

    <LinearLayout
        android:id="@+id/ca_infor_layout_tixing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="提醒"
            android:textColor="#000" />

        <TextView
            android:id="@+id/ca_infor_tixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="无" />

        <ImageView
            android:layout_width="@dimen/text_size_20"
            android:layout_height="@dimen/text_size_20"
            android:layout_gravity="center"
            android:background="@drawable/youbian" />
    </LinearLayout>

    <EditText
        android:id="@+id/ca_infor_beizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="备注"
        android:padding="@dimen/dp_10" />
</LinearLayout>