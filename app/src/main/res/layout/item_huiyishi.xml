<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:s="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_card_background"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         >

        <ImageView
            android:id="@+id/hy_infor_image"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meeting_room_for_search001"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/tuijain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jian"
            android:layout_gravity="right"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/hy_infor_huiname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="B栋01会议室"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/line"
            android:outlineAmbientShadowColor="@color/one"></View>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="容量" />

                <TextView
                    android:id="@+id/hy_infor_rongliang"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="50" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用率" />

                <TextView
                   android:id="@+id/hy_infor_bianhao"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点" />

                <TextView
                    android:id="@+id/hy_infor_didian"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="B栋" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/angry_btn"
                android:text="查看详情"
                android:textColor="#FFFFFF"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/button_shapee"
                android:shadowColor="#525252"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/jindutaio"
                android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/angry_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="50.55%"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:textSize="8sp"
                android:background="@drawable/circle_text"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>